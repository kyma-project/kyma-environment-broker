  "_show_form_view": true,
  "properties": {
    "additionalWorkerNodePools": {
      "description": "Specifies the list of additional worker node pools.",
      "type": "array",
      "uniqueItems": true,
      "items": {
        "type": "object",
        "required": ["name", "machineType", "haZones", "autoScalerMin", "autoScalerMax"],
