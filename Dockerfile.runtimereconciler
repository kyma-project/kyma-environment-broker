# Build image
FROM --platform=$BUILDPLATFORM golang:1.25.1-alpine3.22 AS build
ARG GOFIPS140=v1.0.0
WORKDIR /go/src/github.com/kyma-project/kyma-environment-broker

COPY go.mod go.sum ./
RUN go mod download

COPY cmd cmd
COPY common common
COPY internal internal

ARG TARGETOS TARGETARCH
ARG GOFIPS140
RUN --mount=type=cache,target=/root/.cache/go-build \
    --mount=type=cache,target=/go/pkg \
    CGO_ENABLED=0 GOOS=$TARGETOS GOARCH=$TARGETARCH GOFIPS140=$GOFIPS140 go build -o /bin/runtime-reconciler cmd/runtimereconciler/main.go

# Final image
FROM scratch
ENV GODEBUG=fips140=only
LABEL source=git@github.com:kyma-project/kyma-environment-broker.git

COPY --from=build /bin/runtime-reconciler /bin/runtime-reconciler

CMD ["/bin/runtime-reconciler"]
